---
const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<style>
			html,
			body {
				font-family: system-ui;
			}
			body {
				margin: 0 auto;
			}
		</style>
	</head>
	<body>
		<nav>
			<a href="/">Home</a>
		</nav>
		<h1>{title}</h1>
		<main>
			<slot />
		</main>
	</body>
</html>
